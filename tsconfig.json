{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "ES2021",
      "dom"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types",
      "./src/bot/types"
    ],
    "types": ["node", "jest"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "eslint.config.mjs",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
