{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "ES2021",
      "dom"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
